<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/common_white"
            android:orientation="horizontal" >

        <ImageView
                android:id="@+id/comimage"
                android:layout_width="0dip"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:contentDescription="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/demosmall1" />

        <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/comname"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1.5"
                    android:text="@string/action_settings" />

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                <TextView
                        android:id="@+id/comprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:gravity="bottom"
                        android:text="@string/action_settings"
                        android:textColor="@color/redstandard" />
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                <!--<TextView-->
                        <!--android:id="@+id/comsuppri"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="@string/onlyone"-->
                        <!--android:textColor="@color/common_grey" />-->
                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content"
                               android:src="@drawable/goods_jian"
                               android:layout_toRightOf="@+id/item_pic"
                               android:id="@+id/goods_jian"
                               android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="100"
                              android:layout_centerVertical="true"
                              android:gravity="center_vertical"
                              android:textColor="@color/black"
                              android:id="@+id/item_num"
                              android:layout_toRightOf="@+id/goods_jian"
                              android:layout_height="wrap_content"/>

                    <ImageView android:layout_width="wrap_content"
                               android:id="@+id/goods_add"
                               android:src="@drawable/goods_add"
                               android:layout_toRightOf="@+id/item_num"
                               android:layout_height="wrap_content"/>
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="right"
                        android:text="@string/freight"
                        android:textColor="@color/common_grey" />

                <TextView
                        android:id="@+id/freight"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="3dp"
                        android:text="@string/zero" />

                <TextView
                        android:id="@+id/purchasequantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:visibility="gone"
                        android:text="@string/Paid"
                        android:textColor="@color/common_grey" />

                <TextView
                        android:id="@+id/paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:paddingLeft="3dp"
                        android:text="@string/zero"
                        android:textColor="@color/redstandard" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>