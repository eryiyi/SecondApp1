<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/comimage"
        android:layout_width="0dip"
        android:layout_height="80dp"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:contentDescription="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/demosmall1" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comname"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="@string/action_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="@string/action_settings"
                android:textColor="@color/redstandard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:contentDescription="@color/transparent"
                android:src="@drawable/delete" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comsuppri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_settings"
                android:textColor="@color/common_grey" />

            <TextView
                android:id="@+id/purchasequantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_settings"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/common_grey" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>